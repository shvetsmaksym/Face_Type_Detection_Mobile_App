
<MenuScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Layout_Files/Images/Finished_background.jpeg'
    FloatLayout:
        RoundedButton1:
            pos_hint: {'center_x': 0.25, 'center_y': 0.2}
            size_hint: 0.45, 0.07
            font_size: 0.08 * self.width
            bold: True
            text: 'TAKE A PHOTO'
            back_color:(0,0,0,1)

            on_press: root.manager.current = 'take_photo'

        RoundedButton2:
            pos_hint: {'center_x': 0.75, 'center_y': 0.2}
            size_hint: 0.45, 0.07
            font_size: 0.08 * self.width
            bold: True
            text: 'CHOOSE FROM\nGALLERY'
            halign: 'center'
            back_color:(0,0,0,1)
            on_press: root.manager.current = 'gallery_upload'

        Image:
            source: 'Layout_Files/Images/Title.png'
            allow_stretch: True

<RoundedButton1@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: 8
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2
<RoundedButton2@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [8]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size:self.size
            pos: self.pos
            radius: self.border_radius


